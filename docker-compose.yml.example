version: '3.5'
services:
  app:
    build:
      context: .
    depends_on:
      - db
    environment:
      - RAILS_ENV=development
      - DATABASE_URL=postgresql://mei:mei@db/development
    ports:
      - '3000:3000'
    networks:
      - mei
    volumes:
      - .:/usr/src/app

  db:
    image: postgres:9.6-alpine
    environment:
      - POSTGRES_DB=development
      - POSTGRES_USER=user
      - POSTGRES_PASSWORD=pass
    networks:
      - mei
    volumes:
      - .docker/postgres/data/development:/var/lib/postgresql/data