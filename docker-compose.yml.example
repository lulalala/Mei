version: '3.5'
services:
  app:
    build: .
    entrypoint: bundle exec # so we don't need to specify "bundle exec" for each of our commands
    command: rails s -p 3000 -b '0.0.0.0'
    depends_on:
      - postgres
    ports:
      - '3000:3000'
    volumes:
      - .:/app

  postgres:
    image: postgres:9.6-alpine
    environment:
      POSTGRES_USER: docker
      POSTGRES_PASSWORD: docker
    ports:
      - "5432:5432"
    volumes:
      - .docker/postgres/data/development:/var/lib/postgresql/data